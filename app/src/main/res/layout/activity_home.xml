<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.banerjee.sirsha.imageeditor.activity.HomeActivity">

    <Button
        android:id="@+id/activity_home_btnTakePhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_take_photo" />

    <Button
        android:id="@+id/activity_home_btnSelectFromGallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_select_from_gallery" />
</LinearLayout>
