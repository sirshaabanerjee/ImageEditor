<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/row_filter_thumbnail_llParent"
    android:layout_width="100dp"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dimen_10dp">

    <TextView
        android:id="@+id/row_filter_thumbnail_tvFilterName"
        style="@style/styleThumbnailTextView"
        android:text="thumbnail" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/row_filter_thumbnail_ivFilter"
        android:layout_width="@dimen/dimen_60dp"
        android:layout_height="@dimen/dimen_60dp"
        android:contentDescription="@null"
        app:civ_border_color="@color/colorThumbBackground"
        app:civ_border_width="@dimen/dimen_2dp" />

</LinearLayout>